<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
  "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>

    <!-- Database connection settings -->
    <property name="connection.url">jdbc:postgresql://localhost:5432/hiber</property>
    <property name="connection.driver_class">org.postgresql.Driver</property>
    <property name="connection.username">postgres</property>
    <property name="connection.password">root</property>

    <!-- SQL dialect -->

    <!-- Echo all executed SQL to stdout -->
    <property name="show_sql">true</property>

    <!-- show SQL scripts in readable format -->
    <property name="format_sql">true</property>

    <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>

    <!-- Database connection settings -->
<!--    <property name="connection.url">jdbc:h2:mem:hibertest</property>-->
<!--    <property name="connection.driver_class">org.h2.Driver</property>-->
<!--    <property name="connection.username"/>-->
<!--    <property name="connection.password"/>-->

<!--    &lt;!&ndash; SQL dialect &ndash;&gt;-->

<!--    &lt;!&ndash; Echo all executed SQL to stdout &ndash;&gt;-->
<!--    <property name="show_sql">true</property>-->

<!--    &lt;!&ndash; show SQL scripts in readable format &ndash;&gt;-->
<!--    <property name="format_sql">true</property>-->

<!--    <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>-->
    <!--create - during each test run - drop all, create new tables-->
    <property name="hibernate.hbm2ddl.auto">create</property>

    <!-- specify our entity class (annotated by @Entity) -->
    <mapping class="org.example.entity.User" />
    <mapping class="org.example.entity.Company" />
    <mapping class="org.example.entity.Profile" />
    <mapping class="org.example.entity.Chat" />
    <mapping class="org.example.entity.UserChat" />
    <mapping class="org.example.entity.Programmer" />
    <mapping class="org.example.entity.Manager" />




  </session-factory>
</hibernate-configuration>